<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:stretchColumns="1"
    android:background="@drawable/front"
    android:textSize="30sp"
    
    android:focusable="true"  
    android:focusableInTouchMode="true">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="欢迎进入模拟车机" 
        android:gravity="center"
        android:textSize="50sp"
        />
    <TextView
        android:id="@+id/blank0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        />
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="基础设置" 
        android:textSize="35sp"
       
        />
    
      <View                            
        android:layout_height="2dip"    
        android:background="#faf0e6" />  
      <TextView
        android:id="@+id/blank1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"    
        />

    <TableRow >
        <TextView
            android:id="@+id/tmhost_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TM连接IP： " 
            android:textSize="25sp"/>

        <EditText
            android:id="@+id/tmhost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        </TableRow>
 
       <TextView
        android:id="@+id/blank2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"    
        />
 
      <TableRow >

        <TextView
            android:id="@+id/tmport_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TM连接端口：" 
            android:textSize="25sp"/>

        <EditText
            android:id="@+id/tmport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="" />

    </TableRow>

         <TextView
        android:id="@+id/blank3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"    
        />
     <TableRow >
        <TextView
            android:id="@+id/ivohost_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="车联网服务地址：" 
            android:textSize="25sp"/>
        <EditText
            android:id="@+id/ivohost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
         />

     </TableRow>
     <TextView
        android:id="@+id/blank4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"    
     />
      
     <View                            
        android:layout_height="2dip"    
        android:background="#faf0e6" /> 

      
    <TextView
        android:id="@+id/blank5"
        android:layout_width="wrap_content"
        android:layout_height="800dp" 
        
        />
     <Button
         android:id="@+id/startbutton"
         android:layout_width="168dp"
         android:layout_height="wrap_content"
         android:text="开    始"
         android:textSize="35sp"  
        />

</TableLayout>
